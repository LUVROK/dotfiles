#!/usr/bin/env bash

wpctl() {
  # safely read optional second positional arg
  arg="${2-}"
  # keep only subcommand (get-volume / set-volume / set-mute)
  set -- "$1"
  # add --limit for set-volume
  if [ "$1" = set-volume ]; then set -- "$@" --limit=1.0; fi
  # always insert default sink
  set -- "$@" @DEFAULT_AUDIO_SINK@
  # append arg if non-empty
  if [ -n "$arg" ]; then set -- "$@" "$arg"; fi
  # delegate to real wpctl
  command wpctl "$@"
}

case "${BLOCK_BUTTON:-}" in
    1) xdotool key super+a ;;
    2) wpctl set-mute toggle ;;
    4) wpctl set-volume 3%+ ;;
    5) wpctl set-volume 3%- ;;
    6) kitty -e "$EDITOR" "$0" ;;
esac

if wpctl get-volume | grep -q "[MUTED]"; then
    echo ""
    exit
fi

volume_frac="$(wpctl get-volume | cut -d' ' -f2)"
volume="$(echo "$volume_frac * 100 / 1" | bc)"

if [ -z "$volume" ]; then
    exit 1
fi

if [ "$volume" -gt 40 ]; then
    icon=" "
elif [ "$volume" -gt 15 ]; then
    icon=" "
else
    icon=" "
fi

echo "$icon$volume%"